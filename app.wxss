/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB',
    'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 14px;
  color: #333;
  line-height: 1.6;
}

/* 容器 */
.container {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn {
  padding: 24rpx;
  border-radius: 12rpx;
  text-align: center;
  font-size: 16px;
  font-weight: 500;
}

.btn-primary {
  background: #1AAD19;
  color: #fff;
}

.btn-secondary {
  background: #fff;
  color: #1AAD19;
  border: 1px solid #1AAD19;
}

.btn-danger {
  background: #E64340;
  color: #fff;
}

.btn-large {
  padding: 32rpx;
  font-size: 18px;
}

/* 文本样式 */
.text-primary {
  color: #1AAD19;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-danger {
  color: #E64340;
}

.text-center {
  text-align: center;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.mt-10 {
  margin-top: 10rpx;
}

.mt-20 {
  margin-top: 20rpx;
}

.mt-30 {
  margin-top: 30rpx;
}

.mb-10 {
  margin-bottom: 10rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
}

.mb-30 {
  margin-bottom: 30rpx;
}

.ml-10 {
  margin-left: 10rpx;
}

.ml-20 {
  margin-left: 20rpx;
}

.mr-10 {
  margin-right: 10rpx;
}

.mr-20 {
  margin-right: 20rpx;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 12px;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
}

.tag-primary {
  background: #E7F7E8;
  color: #1AAD19;
}

.tag-info {
  background: #E6F7FF;
  color: #1890FF;
}

.tag-warning {
  background: #FFF7E6;
  color: #FA8C16;
}

/* 适老化：大字体模式 */
page.large-font {
  font-size: 16px;
}

page.large-font .btn {
  font-size: 18px;
  padding: 28rpx;
}

page.large-font .tag {
  font-size: 14px;
}

/* 适老化：超大字体模式 */
page.extra-large-font {
  font-size: 18px;
}

page.extra-large-font .btn {
  font-size: 20px;
  padding: 32rpx;
}

page.extra-large-font .tag {
  font-size: 16px;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #e5e5e5;
  margin: 20rpx 0;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 60rpx 20rpx;
  color: #999;
}

.empty-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx 20rpx;
  color: #999;
}
