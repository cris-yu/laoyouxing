.settings {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.settings-section {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  display: block;
  padding: 30rpx 30rpx 20rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 32rpx;
  color: #333;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.logout-section {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.btn-logout {
  width: 100%;
  padding: 32rpx;
  font-size: 32rpx;
}

/* 适老化：大字体 */
page.large-font .setting-label {
  font-size: 36rpx;
}

/* 适老化：超大字体 */
page.extra-large-font .setting-label {
  font-size: 40rpx;
}
