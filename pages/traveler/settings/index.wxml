<scroll-view scroll-y class="settings">
  <view class="settings-section">
    <text class="section-title">显示设置</text>
    
    <view class="setting-item">
      <text class="setting-label">字体大小</text>
      <picker mode="selector" range="{{fontSizeOptions}}" range-key="label" value="{{fontSizeIndex}}" bindchange="onFontSizeChange">
        <view class="setting-value">
          <text>{{fontSizeOptions[fontSizeIndex].label}}</text>
          <icon type="success" size="14" color="#999"></icon>
        </view>
      </picker>
    </view>
    
    <view class="setting-item">
      <text class="setting-label">声音提示</text>
      <switch checked="{{soundEnabled}}" bindchange="onSoundChange" color="#1AAD19" />
    </view>
  </view>

  <view class="settings-section">
    <text class="section-title">关于</text>
    
    <view class="setting-item" bindtap="showAbout">
      <text class="setting-label">关于老友行</text>
      <icon type="success" size="14" color="#999"></icon>
    </view>
    
    <view class="setting-item" bindtap="showPrivacy">
      <text class="setting-label">隐私政策</text>
      <icon type="success" size="14" color="#999"></icon>
    </view>
  </view>

  <view class="settings-section">
    <text class="section-title">账户</text>
    
    <view class="setting-item" bindtap="switchRole">
      <text class="setting-label">切换为子女</text>
      <icon type="success" size="14" color="#999"></icon>
    </view>
  </view>

  <view class="logout-section">
    <button class="btn btn-danger btn-logout" bindtap="logout">退出登录</button>
  </view>
</scroll-view>
