.contact-edit-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding: 40rpx 30rpx;
}

.form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.save-btn {
  margin-top: 60rpx;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #667eea;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
}
