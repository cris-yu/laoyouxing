.trip-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #fff;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
}

.trip-list {
  padding: 20rpx;
}

.trip-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.trip-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.trip-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
}

.trip-status {
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  white-space: nowrap;
  margin-left: 20rpx;
}

.trip-status.status-upcoming {
  background-color: #e3f2fd;
  color: #1976d2;
}

.trip-status.status-ongoing {
  background-color: #fff3e0;
  color: #f57c00;
}

.trip-status.status-completed {
  background-color: #f5f5f5;
  color: #757575;
}

.trip-info {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 30rpx;
}

.info-label {
  color: #666;
  min-width: 160rpx;
}

.info-value {
  color: #333;
  font-weight: 500;
  flex: 1;
  text-align: right;
}

.trip-footer {
  text-align: right;
}

.view-detail {
  color: #667eea;
  font-size: 30rpx;
  font-weight: 500;
}

.loading-tip,
.empty-tip {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  display: block;
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 28rpx;
  color: #999;
}
