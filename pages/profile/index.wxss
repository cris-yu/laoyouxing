.profile-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 80rpx 40rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 24rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
}

.section {
  background-color: #fff;
  margin: 24rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  padding: 12rpx 32rpx;
  background-color: #667eea;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.contact-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.contact-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
}

.contact-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.contact-relation {
  font-size: 26rpx;
  color: #666;
}

.contact-phone {
  font-size: 30rpx;
  color: #667eea;
  font-weight: 500;
}

.contact-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 16rpx 28rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  border: none;
}

.action-btn.edit {
  background-color: #e3f2fd;
  color: #1976d2;
}

.action-btn.delete {
  background-color: #ffebee;
  color: #d32f2f;
}

.city-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.city-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #e8f5e9;
  color: #2e7d32;
  font-size: 28rpx;
  border-radius: 40rpx;
}

.delete-icon {
  margin-left: 12rpx;
  font-size: 36rpx;
  color: #666;
  font-weight: bold;
}

.empty-hint {
  text-align: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #999;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 40rpx;
  color: #999;
}
