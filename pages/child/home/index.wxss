.child-home {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f5f5f5;
}

.search-bar {
  padding: 20rpx;
  background: #fff;
}

.search-input {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
}

.search-input icon {
  margin-right: 12rpx;
}

.search-input input {
  flex: 1;
  font-size: 28rpx;
}

.search-placeholder {
  color: #999;
}

.filter-bar {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  gap: 20rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
}

.filter-item icon {
  margin-left: 8rpx;
}

.product-list {
  flex: 1;
  padding: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.product-cover {
  width: 100%;
  height: 360rpx;
}

.product-info {
  padding: 24rpx;
}

.product-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.product-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #666;
}

.product-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #E64340;
  margin-right: 4rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #E64340;
}

.suitable-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.suitable-text {
  padding: 4rpx 12rpx;
  background: #E7F7E8;
  color: #1AAD19;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.intensity-badge {
  padding: 4rpx 12rpx;
  background: #E6F7FF;
  color: #1890FF;
  border-radius: 4rpx;
  font-size: 22rpx;
}

.empty {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.loading {
  text-align: center;
  padding: 60rpx 40rpx;
  font-size: 28rpx;
  color: #999;
}
