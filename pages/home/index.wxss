/* 首页样式 - 适老化设计 */

.home-page {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 20rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: #fff;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.page-subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  background-color: #fff;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.picker-box {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  min-width: 160rpx;
  justify-content: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.picker-arrow {
  font-size: 20rpx;
  color: #999;
  margin-left: 8rpx;
}

/* 线路列表 */
.route-list {
  padding: 0 20rpx;
}

.route-card {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.route-image {
  width: 100%;
  height: 360rpx;
}

.route-info {
  padding: 30rpx;
}

.route-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.route-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.meta-item {
  font-size: 28rpx;
  color: #666;
}

.route-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background-color: #e8f5e9;
  color: #2e7d32;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.route-features {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 24rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.feature-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.feature-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.feature-value.intensity-low {
  color: #4caf50;
}

.feature-value.intensity-medium {
  color: #ff9800;
}

.feature-value.intensity-high {
  color: #f44336;
}

.route-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-box {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
}

.price-value {
  font-size: 44rpx;
  color: #ff5722;
  font-weight: bold;
}

.view-detail-btn {
  padding: 20rpx 40rpx;
  background-color: #667eea;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading-tip {
  text-align: center;
  padding: 80rpx 0;
  font-size: 28rpx;
  color: #999;
}

/* 空状态 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 32rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}
